<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Supply Tracker</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">LMS</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                <li class="nav-item"><a class="nav-link" href="/signup">Sign Up</a></li>
                <li class="nav-item"><a class="nav-link" href="/supply">Supply Tracker</a></li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <h1>Supply Tracker</h1>
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Supply</th>
                    <th>Quantity</th>
                    <th>Threshold</th>
                </tr>
            </thead>
            <tbody>
                <% supply.forEach(function(supply) { %>
                    <tr>
                        <td><%= supply.supply %></td>
                        <td><%= supply.quantity %></td>
                        <td><%= supply.threshold %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <h2>Add New Supply</h2>
        <form action="/add-supply" method="POST">
            <div class="form-group">
                <input type="text" name="supply" class="form-control" placeholder="Supply Name" required>
            </div>
            <div class="form-group">
                <input type="number" name="quantity" class="form-control" placeholder="Quantity" required>
            </div>
            <div class="form-group">
                <input type="number" name="threshold" class="form-control" placeholder="Notification Threshold" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Supply</button>
        </form>
        
        <a href="/" class="btn btn-secondary mt-3">Back to Home</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
